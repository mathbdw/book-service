  "paths": {
    "/v1/book-list": {
      "get": {
        "summary": "List of books on pagination",
        "description": "Returns a list of books by pages",
        "operationId": "BookService_List",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1BookListResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "pagination.cursor",
            "description": "String cursor",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "pagination.pageSize",
            "description": "Size rows on page",
            "in": "query",
            "required": false,
            "type": "string",
            "format": "uint64"
          },
          {
            "name": "pagination.sortBy",
            "description": "Sorting field",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "pagination.sortOrder",
            "description": "Sorting order",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "books"
        ]
      }
    },
    "/v1/books": {
      "get": {
        "summary": "Get books by IDs",
        "description": "Get books by their IDs\n\n### Custom Headers:\n- **X-Request-ID**: Unique request identifier\n- **X-Upload-Token**: Upload authorization token",
        "operationId": "BookService_GetByIDs",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1BooksResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "bookId",
            "description": "Slice identificators. Unique params.",
            "in": "query",
            "required": false,
            "type": "array",
            "items": {
              "type": "string",
              "format": "int64"
            },
            "collectionFormat": "multi"
          }
        ],
        "tags": [
          "books"
        ]
      },
      "delete": {
        "summary": "Delete books by IDs",
        "description": "Deletes books by IDs",
        "operationId": "BookService_Delete",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "type": "object",
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "bookId",
            "description": "Slice identificators. Unique params.",
            "in": "query",
            "required": false,
            "type": "array",
            "items": {
              "type": "string",
              "format": "int64"
            },
            "collectionFormat": "multi"
          }
        ],
        "tags": [
          "books"
        ]
      },
      "post": {
        "summary": "Create a new book",
        "description": "Create a new book in the system",
        "operationId": "BookService_Add",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "type": "object",
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
